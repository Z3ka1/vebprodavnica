
@{
    ViewBag.Title = "DodajProdavca";
}

<h2>Dodaj prodavca</h2>

<form method="post" action="/Admin/RegistrujProdavca">
    <table>
        <tr>
            <td>Ime:</td>
            <td>
                <input type="text" name="ime" required />
            </td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td>
                <input type="text" name="prezime" required />
            </td>
        </tr>
        <tr>
            <td>Pol:</td>
            <td>
                <select name="pol">
                    <option value="M">Musko</option>
                    <option value="Z">Zensko</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                <input type="text" name="email" required />
            </td>
        </tr>
        <tr>
            <td>Datum rodjenja:</td>
            <td>
                <input type="date" name="datumRodjenja" required />
            </td>
        </tr>
        <tr>
            <td>Korisnicko ime:</td>
            <td>
                <input type="text" name="korisnickoIme" required />
            </td>
        </tr>
        <tr>
            <td>Lozinka:</td>
            <td>
                <input type="password" name="lozinka" required />
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Registruj prodavca" /> </td>
        </tr>

    </table>


</form>