@using VebProdavnica.Models
@{
    ViewBag.Title = "IzmeniRecenziju";
    var Recenzija = ViewData["Recenzija"] as Recenzija;
}

<h2>Izmena recenzije '@Recenzija.id'</h2>

<form method="post" action="/Prodavnica/PublishIzmenjenuRecenziju">
    <input type="number" value="@Recenzija.id" name="idRecenzije" hidden />
    <table>
        <tr>
            <td>Naslov:</td>
            <td> <input type="text" value="@Recenzija.naslov" name="naslov" /> </td>
        </tr>
        <tr>
            <td>Napisite nesto o ovom proizvodu: </td>
            <td> <input type="text" value="@Recenzija.sadrzajRecenzije" name="sadrzaj" /> </td>
        </tr>
        <tr>
            <td>Mozete dodati i sliku uz vasu recenziju</td>
            <td><input type="file" accept="image/*" value="@Recenzija.slika" name="slika" /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Izmeni recenziju" /></td>
        </tr>
    </table>
</form>
<a href="~/Prodavnica/Profil"> Odustani </a>